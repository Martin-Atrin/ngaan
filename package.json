    "react-dropzone": "^14.2.0",
    "react-hook-form": "^7.52.0",
    "react-query": "@tanstack/react-query@^5.45.0",
    "sharp": "^0.33.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
