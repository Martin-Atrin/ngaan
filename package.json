{
  "name": "ngaan",
  "version": "0.1.0",
  "private": true,
  "description": "LINE Mini App for family task management with blockchain rewards",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "convex": "convex dev",
    "convex:deploy": "convex deploy",
    "dev:backend": "tsx watch src/backend/server.ts",
    "build:backend": "tsc -p tsconfig.server.json",
    "dev:rust": "cd rust-services && cargo run --bin image-processor",
    "build:rust": "cd rust-services && cargo build --release",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.6.0",
