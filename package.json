    "aws-sdk": "^2.1650.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "convex": "^1.26.2",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "ethers": "^6.13.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.3.0",
    "framer-motion": "^11.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.395.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
