# LINE Configuration
NEXT_PUBLIC_LIFF_ID=your-liff-id-here
LINE_CHANNEL_ACCESS_TOKEN=your-channel-access-token
LINE_CHANNEL_SECRET=your-channel-secret

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ngaan_dev"

# Kaia Blockchain Configuration
KAIA_MAINNET_RPC=https://kaia-mainnet-rpc.klaytn.com
KAIA_TESTNET_RPC=https://kaia-testnet-rpc.klaytn.com
REWARDS_CONTRACT_ADDRESS_MAINNET=0x...
REWARDS_CONTRACT_ADDRESS_TESTNET=0x...
PRIVATE_KEY=your-wallet-private-key-hex
NEXT_PUBLIC_NETWORK=testnet

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ngaan-photos-dev
NEXT_PUBLIC_CDN_DOMAIN=https://cdn.ngaan.app

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key
JWT_EXPIRES_IN=7d

# Rust Microservices URLs
RUST_IMAGE_SERVICE_URL=http://localhost:8081
RUST_BLOCKCHAIN_SERVICE_URL=http://localhost:8082

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=https://ngaan.app
PORT=3001
API_PORT=3002

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Email Configuration (for notifications backup)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development flags
NEXT_PUBLIC_DEBUG=false
ENABLE_SWAGGER=true
LOG_LEVEL=info